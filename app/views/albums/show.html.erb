<p id="notice"><%= notice %></p>

<div class="show">
	<span class="name-box">
		Album:
		<%= @album.name %>
	</span>
	<span class="photo-box">
	  Album Photo:
	  <%= image_tag @album.photo, :class => "photo" %>
  </span>

<div class='meta'>
    <% @album.songs.each do |song| %>
    <%= song.name %>
    <% end %>
</div>

<%= link_to 'Edit', edit_album_path(@album), :class => "button" %>
<%= link_to 'Back', albums_path, :class => "button" %>
</div>

