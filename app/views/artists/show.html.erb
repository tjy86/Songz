<p id="notice"><%= notice %></p>

<div class="show">
  	<span class="name-box">
  	Artist:
  	<%= @artist.name %>
	</span>
	<span class="photo-box">
	Photo:
	<%= image_tag @artist.photo %>
	</span>

<div class='meta'>
    <% @artist.albums.each do |album| %>
    <%= album.name %>
    <% end %>
</div>

<%= link_to 'Edit', edit_artist_path(@artist),:class => "button" %>
<%= link_to 'Back', artists_path, :class => "button" %>
</div>