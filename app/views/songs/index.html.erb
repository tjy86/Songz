<h1>Songs</h1>

<div class="index">
<% @songs.each do |song| %>
    <div class="index-box grid_3">
      <%= image_tag song.photo.thumb %>
      <div class="buttons">
      <span class="index_name"><%= link_to song.name, song %></span>
      	<%= link_to 'Edit', edit_song_path(song) %>
      	<%= link_to 'Destroy', song, method: :delete, data: { confirm: 'Are you sure?' } %>
      </div>  
    </div><!--.index-box-->
  <% end %>
</div>